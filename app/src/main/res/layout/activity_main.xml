<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_flowers_img">

    <!-- Panel oscuro para que todo el texto sea legible -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="#AA000000"
        android:layout_margin="14dp">

        <!-- TÃ­tulo de la app -->
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bloqueador de Reels"
            android:textColor="#FFDCDC"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="4"
            android:layout_marginTop="16dp" />

        <!-- Imagen estilo Reto-Do -->
        <ImageView
            android:id="@+id/imgRetoDoCat"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:src="@drawable/reto_cat"
            android:contentDescription="Gato Reto-Do" />

        <!-- Reto-Do tÃ­tulo -->
        <TextView
            android:id="@+id/txtRetoDoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reto-Do: 1 hora sin redes"
            android:textColor="#FFDCDC"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="4"
            android:layout_marginTop="12dp" />

        <!-- DescripciÃ³n del Reto-Do -->
        <TextView
            android:id="@+id/txtRetoDoDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Durante 1 hora no vas a poder usar redes sociales (excepto mensajerÃ­a)."
            android:textColor="#FFDCDC"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="4"
            android:layout_marginTop="8dp" />

        <!-- BotÃ³n Reto-Do -->
        <Button
            android:id="@+id/btnRetoDo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Activar Reto-Do (1 hora)" />

        <!-- Progreso del Reto-Do -->
        <TextView
            android:id="@+id/txtRetoDoProgressLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="ðŸ”¥ Progreso Reto-Do de hoy"
            android:textColor="#FFDCDC"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="4" />

        <ProgressBar
            android:id="@+id/pbRetoDo"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="4dp" />

        <!-- Separador -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:background="#55FFFFFF" />

        <!-- Bloqueo de Reels/Shorts -->
        <TextView
            android:id="@+id/txtSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Bloqueo de Reels / Shorts"
            android:textColor="#FFDCDC"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="4" />

        <TextView
            android:id="@+id/txtSubtitle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="ElegÃ­ cuÃ¡nto tiempo querÃ©s bloquear:"
            android:textColor="#FFDCDC"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="4" />

        <!-- Duraciones -->
        <RadioGroup
            android:id="@+id/radioGroupDurations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <RadioButton
                android:id="@+id/rb15Min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 minutos"
                android:textColor="#FFDCDC"
                android:fontFamily="sans-serif-medium" />

            <RadioButton
                android:id="@+id/rb30Min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 minutos"
                android:textColor="#FFDCDC"
                android:fontFamily="sans-serif-medium" />

            <RadioButton
                android:id="@+id/rb1Hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 hora"
                android:textColor="#FFDCDC"
                android:fontFamily="sans-serif-medium" />

            <RadioButton
                android:id="@+id/rb2Hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 horas"
                android:textColor="#FFDCDC"
                android:fontFamily="sans-serif-medium" />

            <RadioButton
                android:id="@+id/rbIndefinite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hasta que lo desactive"
                android:textColor="#FFDCDC"
                android:fontFamily="sans-serif-medium" />
        </RadioGroup>

        <!-- Activar/desactivar bloqueo -->
        <Button
            android:id="@+id/btnActivate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Activar bloqueo de Reels" />

        <Button
            android:id="@+id/btnDisable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Desactivar bloqueo" />

        <!-- Estado actual -->
        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Bloqueo desactivado."
            android:textColor="#FFDCDC"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="4" />

        <!-- NavegaciÃ³n -->
        <Button
            android:id="@+id/btnGoStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Ver estadÃ­sticas" />

        <Button
            android:id="@+id/btnGoHelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Instrucciones y permisos" />

        <!-- Espacio final -->
        <View
            android:layout_width="match_parent"
            android:layout_height="48dp" />

    </LinearLayout>
</ScrollView>
