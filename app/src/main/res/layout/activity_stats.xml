<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_flowers_img"
    android:padding="0dp">

    <!-- Panel oscuro para que todo el texto sea legible -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#AA000000"
        android:padding="22dp"
        android:layout_margin="14dp">

        <!-- Título -->
        <TextView
            android:id="@+id/txtStatsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estadísticas de uso"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:textColor="#FFF4F4"
            android:shadowColor="#000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="6"
            android:layout_marginBottom="20dp" />

        <!-- Uso diario -->
        <TextView
            android:id="@+id/txtDailyUsage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Uso diario del teléfono: --"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#FFDCDC"
            android:shadowColor="#000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="6"
            android:layout_marginBottom="8dp" />

        <ProgressBar
            android:id="@+id/pbDailyUsage"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginBottom="18dp" />

        <!-- Uso semanal -->
        <TextView
            android:id="@+id/txtWeeklyUsage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Uso semanal (últimos 7 días): --"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#FFDCDC"
            android:shadowColor="#000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="6"
            android:layout_marginBottom="22dp" />

        <!-- Progreso Reto-Do -->
        <TextView
            android:id="@+id/txtRetoProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Horas acumuladas en Reto-Do: --"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#FFDCDC"
            android:shadowColor="#000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="6"
            android:layout_marginBottom="8dp" />

        <ProgressBar
            android:id="@+id/pbRetoDoStats"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginBottom="24dp" />

    </LinearLayout>

</ScrollView>
